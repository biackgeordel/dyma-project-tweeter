div(class="container-fluid  d-flex flex-column justify-content-center align-items-center bg-white")
    div(class=" content-img d-flex flex-row justify-content-center align-items-center")
      img.my-2(src=user.image, alt="photo du profil")
    div(class="d-flex ")
       form.w-100.my-3(action="/users/update/image/" method="POST" class="d-none" enctype="multipart/form-data" )
         input.form-control(type="file", name="profil")
    div(class=" my-3")
      p(class="d-flex flex-row")=` ${user.username} (${user.local.email})`
    div(class="d-flex flex-row my-3 justify-content-center text-center w-100")
      div(class="flex-fill")
        p 
         strong Tweets
         br
         span
             strong.nbre-tweets.text-primary=tweets && tweets.length? tweets.length:"-"
      div(class="flex-fill")
        p 
         strong Following
         br
         span
             strong.text-primary -
script(type="module", src="/javascripts/profil.js")   