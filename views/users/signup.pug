extends ../layout.pug
block content
 .d-flex.justify-content-center.align-items-center.m-5.p-5
     form.card(action="/users/signup" method="POST")
       .card-header 
         h1.title-principal Inscription
       .card-body.p-5
             .card-group.p-2
                 label.form-label(for="username") Username
                 input.form-control(type="text",id="username" name="username"  value=body.username)
             .card-group.p-2
                 label.form-label(for="email") Email
                 input.form-control(type="email",id="email" name="email"  value=body.email)
             .card-group.p-2
                 label.form-label(for="password") Password
                 input.form-control(type="text",id="password" name="password" value=body.password)
             if errors 
                 ul 
                     each error in errors 
                         li.text-danger.my-3=error
             .w-100.p-2 
                 button.btn.btn-primary.btn-lg Enregistrer